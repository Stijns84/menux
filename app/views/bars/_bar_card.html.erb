<div class="container">
  <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
   <div class="row">
    <%= link_to bar_drinks_path(bar) do %>
    <div class="product">
      <%= image_tag bar.picture, class: "product-image" %>
      <div class='product-body cardmat-content'>
        <h3><%= bar.name %></h3>
        <p><%= bar.address %></p>
        <p><%= bar.opening_hours %></p>
      </div>
    </div>
    <% end %>
  </div>
</div>
</div>
