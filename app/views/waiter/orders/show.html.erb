<% content_for :navbar do %>
<%= render 'shared/navbar_barname' %>
<% end %>

<div class="container-fluid">
  <div class="row">
    <div class="col-xs-12 col-sm-10 col-sm-offset-1 col-md-6 col-md-offset-3">
      <div class="page-header">
        <h1 class="text-center">Order overview <small><%= @bar.name %></small></h1>
      </div>
      <ul class="list-group">
        <% @order.order_lines.sort_by {|ol| ol.drink.name }.each do |line| %>
        <li class="list-group-item" id="order_line_show_2<%= line.drink.id %>">
          <div class="row vertical-align">
            <div class="col-xs-8">
              <!-- name of the line.drink -->
              <div class="col-xs-12 col-sm-9">
                <h5><%= line.drink.name %></h5>
              </div>
              <!-- price and quantity -->
              <div class="col-xs-12 col-sm-3">
                <div class="label label-default"><%= line.drink.size %></div>
              </div>
            </div>

            <div class="col-xs-3">
              <%= pluralize(line.quantity, "drink") %>
            </div>
            <!-- button for options -->
          </div>
        </li>
        <% end %>
        <li class="list-group-item">
          <h5>Total of <div class="label label-default"><%= pluralize(@order.number_of_items_per_order, "item") %></div></h5>
        </li>
      </div>
    </ul>
  </div>
</div>

<%= render 'shared/order_done' %>
<%= render 'shared/order_incharge' %>











