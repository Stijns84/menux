     <div class="col-xs-12 col-md-6">
      <div class="bar-card">
        <div class="row">
        <div class="bar-content">

          <p>Order number <%= order.id %></p>
          <p><%= order.amount %> â‚¬</p>
          <p>Order state: paid at <%= order.updated_at.in_time_zone('Eastern Time (US & Canada)')  %></p>
        </div>
        </div>
      </div>
    </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>




