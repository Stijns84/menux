     <%= link_to bar_order_path(@bar, order) do %>
     <div class="col-xs-12 col-md-6">
      <div class="bar-card" style="padding-left: 10px;">
        <div class="row">
            <div class="bar-content">

          <p>Order number <%= order.id %></p>
          <p>Total: <%= order.amount %> â‚¬</p>
          <p>Order state: paid at <%= order.updated_at.in_time_zone(1).to_time  %></p>
        </div>
        </div>
        </div>
        </div>
        <% end %>
      <% end %>
    <% end %>
  </div>
</div>




